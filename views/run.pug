doctype html
html
  head
    title= title + ' - RefreshThis'
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    
  body(style="margin: 0px; overflow: hidden")#thebody
    iframe.m-0(frameborder="0" width='100%' heigth='100%')#theframe 
      block content

  script.
    function reloadFrame() {
      $('#theframe').css('height',$(window).height()).css('width',$(window).width());
      $('#theframe')[0].src = '!{wpg.url}';
      setTimeout(reloadFrame,!{wpg.timing});
    }
    window.onload = function() {
      reloadFrame();
    }